{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
       "@auth/*": ["src/auth/*"],
      "@spotify/*": ["src/spotify/*"],
      "@audio/*": ["src/audio/*"],
      "@visuals/*": ["src/visuals/*"],
      "@controllers/*": ["src/controllers/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"]
    },

    "types": ["vite/client"]
  },
  "include": ["src", "types", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}